<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:FlashView="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_play_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:ignore="contentDescription">


    <FrameLayout
        android:id="@+id/video_frm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.feihutv.zhibofeihu.ui.widget.CNCVideoViewEx
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top" />

        <ImageView
            android:id="@+id/cover_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/land_cover" />

        <View
            android:id="@+id/pc_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.3"/>

        <RelativeLayout
            android:id="@+id/loading_view_rel"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <cn.feihutv.zhibofeihu.ui.widget.flashview.FlashView
                android:id="@+id/loading_view"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </FrameLayout>

    <cn.feihutv.zhibofeihu.ui.widget.LivePlayInPCLandView
        android:id="@+id/rl_controllLayer_land"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />



    <RelativeLayout
        android:id="@+id/up_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/recommend_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/recommend_pc_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_xiuxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="主播正在休息......"
                android:textColor="@color/app_white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_xiuxi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#7FFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="推荐"
                    android:textColor="@color/app_white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="#7FFFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rec_left"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/recommend_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/recommend_head_image_left"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/face" />

                    <TextView
                        android:id="@+id/recommend_nickname_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="昵称"
                        android:textColor="@color/app_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/recommend_count_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="在线:20人"
                        android:textColor="@color/app_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rec_right"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/recommend_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/recommend_head_image_right"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/face" />

                    <TextView
                        android:id="@+id/recommend_nickname_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="昵称"
                        android:textColor="@color/app_white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/recommend_count_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="在线：20人"
                        android:textColor="@color/app_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_controllLayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <include
                android:id="@+id/layout_live_pusher_info"
                layout="@layout/layout_pc_pusher_info"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_arrow_right_shape"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/lin_left"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="ID:"
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_pc_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/app_white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/caichi_time_left"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_below="@+id/layout_live_pusher_info"
                android:layout_marginTop="5dp"
                android:background="@drawable/pic_luckygift_time"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/t1" />

                    <ImageView
                        android:id="@+id/img_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/t0" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/tm" />

                    <ImageView
                        android:id="@+id/img_t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/t2" />

                    <ImageView
                        android:id="@+id/img_t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/t3" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_caichi_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离幸运爱心开奖"
                    android:textColor="@color/btn_sure_forbidden"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_left"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/img_live_exit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_close_pc" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/live_btn_size"
                    android:layout_height="@dimen/live_btn_size"
                    android:src="@drawable/icon_share_pc" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_mv"
                    android:layout_width="@dimen/live_btn_size"
                    android:layout_height="@dimen/live_btn_size"
                    android:src="@drawable/icon_mv_pc" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_full"
                    android:layout_width="@dimen/live_btn_size"
                    android:layout_height="@dimen/live_btn_size"
                    android:src="@drawable/icon_full_pc" />
            </LinearLayout>
        </RelativeLayout>

        <!--<android.support.design.widget.TabLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/rl_controllLayer"-->
        <!--app:tabGravity="center"-->
        <!--app:tabIndicatorHeight="0dp"-->
        <!--app:tabMode="scrollable"-->
        <!--app:tabSelectedTextColor="@color/appColor"-->
        <!--app:tabTextColor="@color/noticetextcolor"/>-->

        <FrameLayout
            android:id="@+id/frm"
            android:layout_below="@id/rl_controllLayer"
            android:layout_width="match_parent"
            android:background="@color/app_white"
            android:layout_height="45dp">
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tl_liveplay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            tl:tl_iconVisible="false"
            tl:tl_textBold="SELECT"
            FlashView:tl_indicator_height="1dp"
            tl:tl_textSelectColor="@color/btn_sure_forbidden"
            tl:tl_textUnselectColor="@color/noticetextcolor"
            tl:tl_indicator_color="@color/btn_sure_forbidden"
            tl:tl_textsize="16sp" />
        </FrameLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_liveplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/frm"
            android:background="@color/bgpupelto" />


    </RelativeLayout>

    <cn.feihutv.zhibofeihu.ui.widget.flashview.FlashView
        android:id="@+id/flashview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        FlashView:loopTimes="0" />

    <ImageView
        android:id="@+id/zuojia_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <cn.feihutv.zhibofeihu.ui.widget.bsrgift.BSRGiftLayout
        android:id="@+id/gift_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>


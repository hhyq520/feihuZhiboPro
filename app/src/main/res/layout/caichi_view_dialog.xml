<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/caichi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="幸运彩池"
                android:textColor="@color/btn_sure_forbidden"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/icon_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:text="中奖记录"
                android:textColor="#a9a9a9"
                android:textSize="14sp"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/diver"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cucmb"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/background_image_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_cucmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_banana"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/background_image_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_banana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_love"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/background_image_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_meteor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/background_image_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计个数"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_meteor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"

                android:orientation="horizontal">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_cucmb_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_banana_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_love_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/btn_sure_forbidden"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计个数"
                        android:textColor="@color/appColor"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/text_meteor_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/appColor"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

            <WebView
                android:background="@color/app_white"
                android:id="@+id/webView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

    <!--幸运记录-->
    <LinearLayout
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/icon_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/img_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="幸运记录"
                android:textColor="@color/messageTextColor"
                android:textSize="16sp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffdec1"
            >

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/fans_contri_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tl_underline_color="#ED9B59"
                app:tl_indicator_color="#ED9B59"
                app:tl_indicator_style="NORMAL"
                app:tl_textsize="12sp"
                app:tl_tab_space_equal="true"
                app:tl_indicator_width_equal_title="true"
                app:tl_textSelectColor="#ED9B59"
                app:tl_textUnselectColor="#ED9B59"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="#ED9B59"
                    android:layout_width="1px"
                    android:layout_height="18dp"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="#ED9B59"
                    android:layout_width="1px"
                    android:layout_height="18dp"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/gift_lin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/app_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="center"
                android:text="时间"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="获奖用户"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="所在房间"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="礼物"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="获得虎币"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="中奖总数"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_lin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/app_white"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              >
                <View
                    android:layout_centerHorizontal="true"
                    android:id="@+id/line1"
                    android:layout_width="1px"
                    android:layout_height="1px"/>
                <TextView
                    android:layout_toRightOf="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_centerHorizontal="true"
                    android:id="@+id/line2"
                    android:layout_width="1px"
                    android:layout_height="1px"/>
                <TextView
                    android:layout_toRightOf="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="礼物"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <View
                    android:layout_centerHorizontal="true"
                    android:id="@+id/line3"
                    android:layout_width="1px"
                    android:layout_height="1px"/>
                <TextView
                    android:layout_toRightOf="@+id/line3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="虎币奖励"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />
            </RelativeLayout>





        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/diver"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_white" />
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_white"
              android:orientation="vertical">

    <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
        android:id="@+id/at_eui_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/about_us"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_about_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="飞虎直播"
            android:textColor="@color/btn_sure_forbidden"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="V2.0版"
            android:textColor="@color/btn_sure_forbidden"
            android:textSize="20sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="@color/bangdan_bg"/>

    <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="飞虎粉丝交流群 : 125167"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="官网 : www.chinasouhu.net"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="邮箱 : feihuzhibo@szsohu.net"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
        android:id="@+id/about_contact"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:canNav="true"
        app:isBottom="true"
        app:name="联系我们"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bangdan_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="深圳市搜虎网络科技有限公司"
            android:textColor="@color/noticetextcolor"
            android:textSize="13sp"/>
    </FrameLayout>
</LinearLayout>

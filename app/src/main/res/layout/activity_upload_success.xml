<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

        <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:titleText="@string/authentication" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="您的申请已提交"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="我们会在7个工作日内对您提交的信息进行审核"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="请您耐心等待。审核结果会在系统消息里进行通知"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_below="@+id/login_ll2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/app_white"
            android:background="@drawable/selector_btn_background_forbidden"
            android:text="@string/ok"
            android:textSize="18sp" />
    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="33dp"
    android:background="@drawable/pusher_info_background"
    android:paddingBottom="1dp"
    android:paddingRight="5dp"
    android:paddingTop="1dp"
    >

    <ImageView
        android:id="@+id/mHeadIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/face" />


    <LinearLayout
        android:id="@+id/lin"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/mHeadIcon"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_broadcasting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_white"
        android:text="直播中"
        android:maxLines="1"
        android:textSize="10sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/app_white"
            android:text="0人"
            android:textSize="10sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/ctl_btnSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:src="@drawable/icon_focus"
        android:layout_toRightOf="@+id/lin"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tab_head_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="1dp"
        android:enabled="false"
        android:text="@string/about_us"
        android:textColor="@color/my_tab_text_select"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/tab_my_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tab_text"
        android:src="@drawable/icon_return"
        android:visibility="visible"/>


    <ImageView
        android:id="@+id/tab_my_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tab_text"
        android:src="@drawable/background_image_triangle"
        android:visibility="gone"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_share"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_share_circle"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_friends"/>

        <ImageView
            android:id="@+id/iv_share_wx"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_wx"/>

        <ImageView
            android:id="@+id/iv_share_qq"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/login_qq_hb"/>

        <ImageView
            android:id="@+id/iv_share_qzone"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_qzone_hb"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_wb"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_weibo"/>

        <ImageView
            android:id="@+id/iv_copy"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_copylink"/>

        <ImageView
            android:id="@+id/iv_dowmload"
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_download"/>

        <ImageView
            style="@style/share_platform_btn_mv"
            android:layout_weight="1"
            android:src="@drawable/icon_qzone_hb"
            android:visibility="invisible"/>

    </LinearLayout>





</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/layout"
    android:background="@drawable/shape_mv_my_bg2">

    <RelativeLayout
        android:paddingLeft="7.5dp"
        android:paddingBottom="10dp"
        android:paddingRight="3dp"
        android:id="@+id/rl_userInfo"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mv_video_layout"
        android:layout_width="match_parent" >
        <android.support.v7.widget.CardView
            android:layout_marginTop="12.5dp"
            android:layout_centerVertical="true"
            android:id="@+id/item_mv_image_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/item_mv_image"
                android:src="@drawable/bg"
                android:scaleType="centerCrop"
                android:layout_width="170.5dp"
                android:layout_height="100dp"/>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_marginTop="22.5dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/mv_user_name"
            android:layout_toRightOf="@+id/mv_user_head"
            android:text="主播名称6666"
            android:maxLength="15"
            android:maxLines="1"
            android:textSize="13sp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/dynamic_text_color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="12.5dp"
            android:layout_toRightOf="@+id/item_mv_image_cardview"
            android:layout_marginLeft="8dp"
            android:id="@+id/mv_user_head"
            android:src="@drawable/head_bg"
            android:layout_width="32dp"
            android:layout_height="32dp"/>



        <TextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_mv_image_cardview"
            android:id="@+id/mv_title_song"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/mv_user_head"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="1651516161516115"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/mv_title_desc"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/mv_title_song"
            android:layout_toRightOf="@+id/item_mv_image_cardview"
            android:maxLines="2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:id="@+id/mv_state"
            android:src="@drawable/icon_mv_audit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/driver"
        android:background="@color/app_white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/item_tool"
        android:paddingRight="11dp"
        android:paddingLeft="7.5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mv_item_time"
            android:drawableLeft="@drawable/icon_mv_time2"
            android:lines="1"
            style="@style/mv_item_comment_view"
            android:maxLength="30"
            android:text="12.55" />

        <TextView
            android:id="@+id/mv_zan"
            style="@style/mv_item_comment_view"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/mv_comment"
            android:drawableLeft="@drawable/mv_like_n"
            android:text="20.02万"
            />

        <TextView
            android:text="20.02万"
            android:layout_marginRight="15dp"
            android:id="@+id/mv_comment"
            android:layout_toLeftOf="@+id/mv_gift"
            android:drawableLeft="@drawable/comment"
            style="@style/mv_item_comment_view"
            />
        <TextView
            android:text="20.02万"
            style="@style/mv_item_comment_view"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_gift"
            android:id="@+id/mv_gift"
            />
    </RelativeLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/bg_color">

        <FrameLayout
            android:id="@+id/gift_frm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gray_rec_bg">

            <ImageView
                android:id="@+id/mount_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/banana"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_margin="1dp"
                android:background="#51000000">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/select_frm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7FFFBB00"/>

            <TextView
                android:id="@+id/is_use_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="使用中"
                android:textColor="@color/app_white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/days_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="0天"
                android:textColor="@color/btn_sure_forbidden"
                android:textSize="16sp"/>
        </FrameLayout>

        <Button
            android:id="@+id/use_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/gift_frm"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_btn_background_forbidden"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:text="使用"
            android:textColor="@color/app_white"
            android:textSize="16sp"/>

    </RelativeLayout>
</LinearLayout>

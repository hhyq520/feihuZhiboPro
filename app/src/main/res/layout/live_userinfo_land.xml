<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_live_userinfo"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape20">

    <FrameLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/tv_report"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/icon_report"
        android:text="举报"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <Button
        android:layout_below="@+id/tv_report"
        android:id="@+id/tv_ban"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/forbid_talk"
        android:text="禁言"
        android:background="@null"
        android:textColor="@color/my_tab_text_n"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_view"
        >


        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"/>


        <LinearLayout
            android:id="@+id/ll_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/messageTextColor"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_level"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/rank_1" />

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp" />
            <ImageView
                android:id="@+id/img_guard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />
            <ImageView
                android:id="@+id/img_liang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_live1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_live"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="飞虎号："
                android:textColor="#5d5d5d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_accountId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#5d5d5d"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_live1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="这人好懒，什么都没留下..."
            android:textColor="#5d5d5d" />

        <LinearLayout
            android:id="@+id/ll_live2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_live"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_concern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/bangdan_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />

            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/bangdan_bg" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收到"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />



            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/bangdan_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_expend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/view_live"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_live2"
            android:layout_marginTop="5dp"
            android:background="@color/bangdan_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_live"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:id="@+id/ll_focus"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_add"
                    android:src="@drawable/add_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="关注"
                    android:textColor="@color/btn_sure_forbidden"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/diver" />

            <TextView
                android:id="@+id/tv_community"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TA的动态"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/messageTextColor"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/diver" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_guard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="守护TA"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/messageTextColor"
                android:textSize="16sp" />

            <View
                android:visibility="gone"
                android:id="@+id/view_guard"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/diver" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="私信"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/messageTextColor"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_manger"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/diver"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_setmanger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置场控"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/face" />

</RelativeLayout>

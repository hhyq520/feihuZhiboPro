<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp">

        <FrameLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <RelativeLayout
            android:id="@+id/login_phone_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/login_shape"
            android:paddingBottom="60dp">


            <ImageView
                android:id="@+id/iv_login_zw"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-45dp"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_login_zw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="登录"
                android:textColor="@color/appColor"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/login_ll1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_input_account"/>

                <EditText
                    android:id="@+id/login_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/phoneNum"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/textNormal"
                    android:textColorHint="@color/text_gray"
                    android:textCursorDrawable="@null"
                    android:theme="@style/MyEditText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_ll2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/login_ll1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_input_psd"/>

                <EditText
                    android:id="@+id/login_edit_psd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="@string/inputPsd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/textNormal"
                    android:textColorHint="@color/text_gray"
                    android:textCursorDrawable="@null"
                    android:theme="@style/MyEditText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/login_btn"
                android:layout_below="@+id/login_btn"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/forgetPsd"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/login_btn"
                android:layout_below="@+id/login_btn"
                android:layout_marginTop="10dp"
                android:text="@string/register"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/login_ll2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_btn_background_theme_shallow"
                android:enabled="false"
                android:text="@string/login"
                android:textColor="@color/app_white"
                android:textSize="18sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_feihu"/>

    </RelativeLayout>

</RelativeLayout>

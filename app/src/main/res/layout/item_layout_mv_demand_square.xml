<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_mv_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_mv_sq_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mv_video_layout"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="10dp">


            <ImageView
                android:id="@+id/mv_user_head"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/head_bg" />


            <TextView
                android:id="@+id/mv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/mv_user_head"
                android:ellipsize="end"
                android:maxLength="15"
                android:maxLines="1"
                android:text=""
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_mv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/mv_user_name"
                android:src="@drawable/icon_mv_collect_s"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_mv_zd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_mv_sq_d1" />

            <TextView
                android:id="@+id/mv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mv_user_head"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/mv_title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mv_title"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

        </RelativeLayout>


        <TextView
            android:id="@+id/driver"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_userInfo"
            android:layout_marginTop="5dp"
            android:background="@color/app_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/driver"
            android:padding="10dp">

            <TextView
                android:id="@+id/mv_item_coin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="悬赏" />

            <TextView
                android:id="@+id/mv_item_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/mv_item_coin1"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_mv_coin"
                android:text="20000"
                android:textColor="@color/mv_item_coin"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_item_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/mv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/icon_mv_time"
                    android:drawablePadding="3dp"
                    android:textColor="@color/mv_item_coin"
                    android:textSize="13sp" />

                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/cv_countdownView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    app:isConvertDaysToHours="true"
                    app:isShowDay="false"
                    app:isShowHour="true"
                    app:isShowMillisecond="false"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:suffixGravity="center"
                    app:suffixTextColor="@color/mv_item_coin"
                    app:suffixTextSize="13sp"
                    app:timeTextColor="@color/mv_item_coin"
                    app:timeTextSize="13sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_post_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_mv_sq_bg2"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_pitch_on" />


        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
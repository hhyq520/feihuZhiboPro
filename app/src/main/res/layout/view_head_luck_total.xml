<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.a+ndroid.com/apk/res-auto"
    android:background="@color/bangdan_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/polygonImageView_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/icon_second_six"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_live2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_live_logo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_second_logo"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_nick_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textNormal"
                android:layout_below="@+id/iv_second"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_2"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_awardcount2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="次"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="@color/text_gray"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:layout_below="@+id/ll_2"
                android:drawableRight="@drawable/icon_gold_logo"
                android:textColor="@color/btn_sure_forbidden"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/polygonImageView_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/face"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_first_six"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_first_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"/>

            <ImageView
                android:id="@+id/iv_live1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_live_logo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_nick_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textNormal"
                android:layout_below="@+id/iv_first"/>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_awardcount1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="次"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="@color/text_gray"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/ll_1"
                android:maxLines="1"
                android:drawableRight="@drawable/icon_gold_logo"
                android:textColor="@color/btn_sure_forbidden"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/polygonImageView_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/icon_second_six"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_live3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_live_logo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_third"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_third_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"/>

            <TextView
                android:id="@+id/tv_nick_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textNormal"
                android:layout_below="@+id/iv_third"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_3"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_awardcount3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/messageTextColor"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="次"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:textColor="@color/text_gray"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawablePadding="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/ll_3"
                android:maxLines="1"
                android:drawableRight="@drawable/icon_gold_logo"
                android:textColor="@color/btn_sure_forbidden"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.feihutv.zhibofeihu.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_white"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/icon_seek"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.androidkun.xtablayout.XTabLayout
                android:id="@+id/sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:xTabIndicatorColor="@color/btn_sure_forbidden"
                app:xTabIndicatorHeight="2dp"
                app:xTabIndicatorWidth="30dp"
                app:xTabMode="scrollable"
                app:xTabSelectedTextColor="@color/btn_sure_forbidden"
                app:xTabSelectedTextSize="20sp"
                android:paddingRight="40dp"
                app:xTabTextColor="@color/textNormal"
                app:xTabDisplayNum="7"
                app:xTabTextSize="16sp"/>

            <ImageView
                android:id="@+id/history"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shadow_add_titlebar"
                android:padding="10dp"
                android:scaleType="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:scaleType="center"
                android:src="@drawable/icon_history"/>

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>

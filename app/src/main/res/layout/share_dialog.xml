<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_share"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="分享更多惊喜"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/messageTextColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_share_circle"
            style="@style/share_platform_btn"
            android:layout_weight="1"
            android:src="@drawable/icon_friends"/>

        <ImageView
            android:id="@+id/btn_share_wx"
            style="@style/share_platform_btn"
            android:layout_weight="1"
            android:src="@drawable/icon_wx"/>

        <ImageView
            android:id="@+id/btn_share_qq"
            style="@style/share_platform_btn"
            android:layout_weight="1"
            android:src="@drawable/login_qq_hb"/>

        <ImageView
            android:id="@+id/btn_share_qzone"
            style="@style/share_platform_btn"
            android:layout_weight="1"
            android:src="@drawable/icon_qzone_hb"/>

        <ImageView
            android:id="@+id/btn_share_wb"
            style="@style/share_platform_btn"
            android:layout_weight="1"
            android:src="@drawable/icon_weibo"/>

    </LinearLayout>


</LinearLayout>

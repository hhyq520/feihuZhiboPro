<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hd_shape">

    <LinearLayout
        android:id="@+id/playinpc_msg_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/playinpc_msg_linearlayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/tv_friends"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="好友列表"
                android:textColor="@color/dynamic_text"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_noread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:text="忽略未读"
                android:textColor="@color/dynamic_text"
                android:textSize="15sp"/>

        </RelativeLayout>

        <include layout="@layout/net_status_bar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/diver"/>

        <RelativeLayout
            android:id="@+id/front"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_gravity="center"
            android:background="@color/app_white"
            android:paddingBottom="6.0dip"
            android:paddingTop="6.0dip"
            android:tag="front">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="53.0dip"
                android:layout_height="53.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/fh_kf_icon"/>


            <View
                android:visibility="gone"
            android:id="@+id/view_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@+id/icon"
            android:layout_alignTop="@+id/icon"
            android:background="@drawable/notice_dot_shape" />

            <TextView
                android:id="@+id/fh_name"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:layout_alignTop="@+id/icon"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/icon"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="飞虎客服"
                android:textColor="@color/my_tab_text_n"
                android:textSize="15.0sp"/>

            <LinearLayout
                android:id="@+id/lin_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fh_name"
                android:layout_marginLeft="70.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="2.0dip"
                android:duplicateParentState="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_msg_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/nim_g_ic_failed_small"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/fh_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="25.0dip"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="6.0dip"
                    android:paddingRight="6.0dip"
                    android:text="欢迎来到飞虎直播，我是虎宝，很高兴为您服务..."
                    android:textColor="@color/text_gray"
                    android:textSize="13.0sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/back"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bangdan_bg"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cn.feihutv.zhibofeihu.ui.widget.swipelistview.SwipeListView
                xmlns:swipe="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recent_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@color/bangdan_bg"
                android:dividerHeight="1px"
                swipe:swipeActionLeft="reveal"
                swipe:swipeBackView="@+id/back"
                swipe:swipeCloseAllItemsWhenMoveList="true"
                swipe:swipeFrontView="@+id/front"
                swipe:swipeMode="left"
                swipe:swipeOffsetLeft="260dip"
                swipe:swipeOpenOnLongPress="false"/>

            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="19dp"
                android:drawableTop="@drawable/icon_no_attention"
                android:text="没人撩，何不主动出击"
                android:textColor="@color/dynamic_text"
                android:textSize="15.0sp"
                android:visibility="gone"/>
        </FrameLayout>


    </LinearLayout>


    <!--好友列表-->
    <LinearLayout
        android:id="@+id/playinpc_msg_linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hd_shape"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:src="@drawable/img_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="好友列表"
                android:textColor="@color/dynamic_text"
                android:textSize="15sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bangdan_bg"/>
        <FrameLayout
            android:background="@color/app_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendslist_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            <TextView
                android:text="你还没有好友哦~"
                android:textSize="18sp"
                android:id="@+id/text_tip"
                android:visibility="gone"
                android:drawableTop="@drawable/icon_no_attention"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:textColor="@color/diver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>


    <!--聊天-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/playinpc_msg_linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hd_shape"
        android:orientation="vertical">

        <FrameLayout
            android:id="@id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:src="@drawable/img_back"/>

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/dynamic_text"
                android:textSize="15sp"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/diver"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@color/bgpupelto">

            <cn.feihutv.zhibofeihu.ui.widget.xlistview.MsgListView
                android:id="@+id/msg_listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                android:transcriptMode="normal"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/diver"/>

        <LinearLayout
            android:id="@+id/inputBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/message_edit"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="6.0dip"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6.0dip"
                android:layout_weight="1"
                android:autoLink="web|email|phone"
                android:background="@drawable/input_shape_8"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine"
                android:maxHeight="68.0dip"
                android:paddingBottom="4.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="14.0dip"
                android:paddingTop="4.0dip"
                android:textColor="@color/dynamic_text_color2"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/send"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/btn_sure_forbidden"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_share_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到朋友圈"
                android:textColor="@color/inputTextColor"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/login_wxfriends"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享给微博粉丝"
                android:textColor="@color/inputTextColor"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_weibo"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发给微信好友"
                android:textColor="@color/inputTextColor"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_wx"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_share_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到QQ空间"
                android:textColor="@color/inputTextColor"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_qzone_hb"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/tv_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发给QQ好友"
                android:textColor="@color/inputTextColor"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/login_qq_hb"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

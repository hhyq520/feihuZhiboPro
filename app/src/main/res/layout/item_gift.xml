<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_giftlayout">

            <ImageView
                android:id="@+id/crvheadimage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:src="@drawable/face" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/crvheadimage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gift_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小k"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:text="送出了爱心"
                    android:textColor="@color/btn_sure_forbidden"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivgift"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/linearLayout" />
        </RelativeLayout>

        <cn.feihutv.zhibofeihu.ui.widget.MagicTextView
            android:id="@+id/giftNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:includeFontPadding="false"
            android:text="x1"
            android:textColor="@color/btn_sure_forbidden"
            android:textSize="23sp"
            android:textStyle="bold"
            app:strokeColor="#f26324"
            app:strokeJoinStyle="bevel"
            app:strokeWidth="3" />
    </LinearLayout>
</RelativeLayout>

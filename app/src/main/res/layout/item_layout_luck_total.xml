<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_rank"
            android:src="@drawable/face"/>

        <ImageView
            android:id="@+id/iv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_live_logo"
            android:visibility="gone"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="40dp"/>


        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_toLeftOf="@+id/luck_ll"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/luck_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_awardcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textColor="@color/messageTextColor"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="æ¬¡"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_gold_logo"
            android:textColor="@color/btn_sure_forbidden"/>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
        android:id="@+id/tc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backText="返回"
        app:titleText="发布需求"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mv_user_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner_mv_post"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#fd593f"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/et_demand_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="填写标题"
                        android:maxLength="15"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    style="@style/mv_driver_h"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:id="@+id/et_demand_songName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/transparent"
                    android:hint="填写歌曲名称"
                    android:maxLength="50"
                    android:textSize="14sp"/>

                <View
                    style="@style/mv_driver_h"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:id="@+id/et_demand_songAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/transparent"
                    android:hint="填写歌手名称"
                    android:maxLength="30"
                    android:textSize="14sp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#efefef"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#fd593f"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:maxLength="50"
                        android:text="具体要求"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    style="@style/mv_driver_h"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:id="@+id/et_demand_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="填写要求"
                    android:lines="3"
                    android:maxLength="50"
                    android:paddingTop="10dp"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_demand_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkbox_mv_s"
                        android:drawablePadding="5dp"
                        android:text="发布给所有主播"
                        android:textColor="@color/mv_demand_text"
                        android:textSize="11sp"/>

                    <CheckBox
                        android:id="@+id/cb_demand_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/checkbox_mv_s"
                        android:drawablePadding="5dp"
                        android:text="指定主播为我制定MV"
                        android:textColor="@color/mv_demand_text"
                        android:textSize="11sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#efefef"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="#fd593f"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="发布赏金"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="#efefef"/>

                <LinearLayout
                    android:id="@+id/ll_post_coin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="14.5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10.5dp">

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/submit"
                android:layout_width="192dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_btn_background_forbidden"
                android:gravity="center"
                android:text="发布需求"
                android:textColor="@color/white"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>

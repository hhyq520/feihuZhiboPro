<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_white"
              android:orientation="vertical">

    <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
        android:id="@+id/zb_eui_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="赠送好友"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@color/app_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/bangdan_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/pic_bg_givefri"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/shape_rings">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/face"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>



            <EditText
                android:id="@+id/edit_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入好友的8位数字ID号"
                android:inputType="number"
                android:maxLength="8"
                android:textColor="@color/text_gray"
                android:textColorHint="@color/text_gray"
                android:textSize="12sp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="@color/bangdan_bg"/>

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/icon_seek"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hubi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_gold_logo"
            android:gravity="center"
            android:text="虎币余额：2222"
            android:textColor="@color/messageTextColor"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bangdan_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="会员充值套餐"
        android:textColor="@color/messageTextColor"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/give_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bangdan_bg"/>

    <Button
        android:id="@+id/btn_give"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@drawable/selector_btn_background_forbidden"
        android:text="赠送VIP"
        android:textColor="@color/app_white"
        android:textSize="@dimen/text_16_sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bangdan_bg"/>

</LinearLayout>
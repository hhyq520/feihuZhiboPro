<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_white"
              android:orientation="vertical">


    <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
        android:id="@+id/phone_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/modify_phone"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/purple_gray_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:inputType="number"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/noticetextcolor"
            android:textColorHint="@color/text_gray"/>


        <TextView
            android:id="@+id/tv_phonecode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_send_shape"
            android:gravity="center"
            android:text="@string/getCode"
            android:textColor="@color/app_white"
            android:textSize="16sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/verifity_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/purple_gray_shape"
        android:hint="@string/inputCode"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/text_gray"
        android:textColorHint="@color/text_gray"/>


    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ll2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_btn_background_forbidden"
        android:text="@string/nextstep"
        android:textColor="@color/app_white"
        android:textSize="18sp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bangdan_bg"
            android:scrollbars="none">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:id="@+id/linearLayout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/bgpupelto"
                  android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/contribution_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/app_white">

            <TextView
                android:id="@+id/contribution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/fans_contribution"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/con_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/con_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/con_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrow_right"
                    android:tint="@color/colorGray3"/>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/view"
            style="@style/mine_item_view"/>

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_shouhu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:canNav="true"
            app:isBottom="true"
            app:name="TA的守护"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@color/app_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="ID 号"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (点击可复制)"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tcl_idnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/noticetextcolor"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="14sp" />

        </LinearLayout>

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_send_gift"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:canNav="false"
            app:content="0"
            app:isBottom="true"
            app:name="@string/send_gift"/>

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_get_gift"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:canNav="false"
            app:content="0"
            app:isBottom="true"
            app:name="@string/get_gift"/>

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_zhibojian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:canNav="true"
            app:content="直播ing"
            app:isBottom="true"
            app:name="TA的直播间"/>

    </LinearLayout>
</ScrollView>

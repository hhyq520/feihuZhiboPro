<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frm_top"
        android:layout_above="@+id/lin_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_above="@+id/line_bottom"
        android:id="@+id/lin_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/app_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="我要互动"
            android:gravity="center"
            android:textColor="@color/text_color_select_shop"
            android:textSize="13sp" />
        <View
            android:layout_width="46dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/guess_history"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="竞猜历史"
            android:gravity="center"
            android:textColor="@color/text_color_select_shop"
            android:textSize="13sp" />

        <View
            android:layout_width="46dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/award_history"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="开奖记录"
            android:gravity="center"
            android:textColor="@color/text_color_select_shop"
            android:textSize="13sp" />

    </LinearLayout>






        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/pc_leyao_bg"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/img_jincai"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_game_two" />

                    <LinearLayout
                        android:id="@+id/lin_time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/game_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/barrage_shape"
                            android:padding="5dp"
                            android:text="游戏已进行1/6"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/game_countdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/barrage_shape"
                            android:padding="5dp"
                            android:text="游戏倒计时0:00"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="85dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/pic_card_ves"
                            android:orientation="horizontal">

                            <cn.feihutv.zhibofeihu.ui.widget.ZQImageViewRoundOval
                                android:id="@+id/head_img1"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_num1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/num_bg"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/app_white"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <cn.feihutv.zhibofeihu.ui.widget.ZQImageViewRoundOval
                                android:id="@+id/head_img2"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@+id/tv_num1"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_num2"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/tv_num1"
                                android:background="@drawable/num_bg"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/app_white"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <cn.feihutv.zhibofeihu.ui.widget.ZQImageViewRoundOval
                                android:id="@+id/head_img3"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@+id/tv_num2"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_num3"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="10dp"
                                android:layout_toRightOf="@+id/tv_num2"
                                android:background="@drawable/num_bg"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="@color/app_white"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/list_horizontal"
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/play_game"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/barrage_shape"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_gray" />

                        <Button
                            android:id="@+id/go_room"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/yellow_bg"
                            android:text="开启"
                            android:textColor="@color/app_white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/game_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_game_help"
                        android:padding="5dp" />

                    <ImageView
                        android:id="@+id/end_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:src="@drawable/game_background"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:visibility="visible"
                android:id="@+id/first_view"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg">

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="130dp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_dot_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dots" />

                    <ImageView
                        android:id="@+id/img_dot_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dots" />

                    <ImageView
                        android:id="@+id/img_dot_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/dots" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_hudong"
                    android:background="@drawable/yellow_bg"
                    android:textColor="@color/app_white"
                    android:text="我要互动"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />

                <cn.feihutv.zhibofeihu.ui.widget.VerticalViewPager
                    android:id="@id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="130dp" />

            </FrameLayout>

            <RelativeLayout
                android:background="@color/base_bg"
                android:layout_weight="1"
                android:id="@+id/kaijilu_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>

            <LinearLayout
                android:background="@color/base_bg"
                android:layout_weight="1"
                android:id="@+id/jincai_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:text="今日收益"
                    android:textColor="@color/textNormal"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_gold_logo"/>

                        <TextView
                            android:id="@+id/tv_hubi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="100000"
                            android:textColor="@color/btn_sure_forbidden"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_silver"/>

                        <TextView
                            android:id="@+id/yin_coin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="1000000"
                            android:textColor="@color/btn_sure_forbidden"
                            android:textSize="18sp" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#9BA1A0A0" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_view_jincai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frm_hudong"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frm_jincai"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <WebView
                android:background="@color/base_bg"
                android:visibility="gone"
                android:id="@+id/webView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">


    <cn.feihutv.zhibofeihu.ui.widget.TCActivityTitle
        android:id="@+id/account_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/text14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="@string/gold_coin"
            android:textColor="@color/textNormal"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/gold_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:text="0"
            android:textColor="@color/btn_sure_forbidden"
            android:textSize="47sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/diver"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="0"
            android:textColor="@color/btn_sure_forbidden"
            android:textSize="47sp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="可提现（元）"
            android:textColor="@color/textNormal"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text18"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/account_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.9"
                android:layout_marginLeft="2dp"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/change_account"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:background="@drawable/yello_border_bg"
                android:text="@string/text17"
                android:textColor="@color/btn_sure_forbidden"/>

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.1"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/text20"
            android:textColor="@color/textNormal"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/gold_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/text21"
            android:imeOptions="actionNone"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="9"
            android:textColor="@color/textNormal"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/diver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/text22"
            android:textColor="@color/textNormal"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/real_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:hint="@string/text23"
            android:textColor="@color/textNormal"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bgpupelto">

        <LinearLayout
            android:id="@+id/tip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_choose"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="@string/text25"
                android:textSize="12sp"
                android:textColor="@color/textNormal"/>

            <TextView
                android:id="@+id/xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/text26"
                android:textSize="12sp"
                android:textColor="@color/btn_sure_forbidden"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_tixian"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tip_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn_background_forbidden"
            android:text="@string/text24"
            android:textColor="@color/app_white"
            android:textSize="18sp"/>


    </RelativeLayout>

</LinearLayout>

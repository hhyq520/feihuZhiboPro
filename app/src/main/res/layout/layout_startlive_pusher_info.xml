<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:background="@drawable/pusher_info_background"
    android:paddingBottom="1dp"
    android:paddingTop="1dp"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/mHeadIcon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/face" />

    <TextView
        android:id="@+id/tv_broadcasting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/mHeadIcon"
        android:textColor="@color/app_white"
        android:text="直播中"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/ctl_btnSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:src="@drawable/btn_switch"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tv_broadcasting_time"/>

</RelativeLayout>

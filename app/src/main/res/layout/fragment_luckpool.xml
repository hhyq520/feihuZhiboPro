<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bangdan_bg"
    android:id="@+id/root_view"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_lucky"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_lucky" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幸运彩池"
                android:layout_marginTop="10dp"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/linearLayoutWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_week" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周星栏"
                android:layout_marginTop="10dp"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relativeLayout3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="visible"
                android:id="@+id/img_tuzi"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_quiz_channel" />


            <TextView
                android:id="@+id/text_yxjc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏竞猜"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/img_tuzi"
                android:textColor="@color/textNormal"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         >

            <ImageView
                android:visibility="visible"
                android:id="@+id/img_yaogan"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_shake_channel"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/text_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乐摇主播"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_yaogan"
                android:layout_marginTop="10dp"
                android:textColor="@color/textNormal"
                android:textSize="14sp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="主播未抢到游戏权限！"
        android:textColor="@color/app_white"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/caichi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bangdan_bg"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/app_white">

            <ImageView
                android:visibility="visible"
                android:id="@+id/icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/img_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="幸运彩池"
                android:id="@+id/text_title"
                android:textColor="@color/my_tab_text_n"
                android:textSize="16sp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bangdan_bg"/>

        <LinearLayout
            android:id="@+id/caichi_view_first"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/base_bg"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/base_bg"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cucmb"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pci_cucmb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_cucmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_banana"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pic_lucky_banna" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_banana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_love"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pic_luckylov" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计奖金"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_meteor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/pic_meteor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计个数"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_meteor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/my_tab_text_n"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/base_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_cucmb_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_banana_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="主播奖金"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_love_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="累计个数"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/text_meteor_zb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/messageTextColor"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/diver"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:layout_height="1px"/>

            <FrameLayout
                android:id="@+id/frm_button_bg"
                android:background="@color/base_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@drawable/yello_border_8bg"
                        android:id="@+id/icon_history"
                        android:text="幸运记录"
                        android:textSize="15sp"
                        android:textColor="@color/app_white"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />

                    <Button
                        android:background="@drawable/yello_border_8bg"
                        android:id="@+id/wanfa_text"
                        android:textColor="@color/app_white"
                        android:text="玩法说明"
                        android:layout_marginLeft="20dp"
                        android:textSize="15sp"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <WebView
            android:visibility="gone"
            android:background="@color/app_white"
            android:id="@+id/webView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <LinearLayout
            android:id="@+id/record_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="幸运礼物"
                    android:textColor="@color/caichi_text" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ED9B59" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="飞虎流星"
                    android:textColor="@color/caichi_text" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#ED9B59" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_bg"
                    android:gravity="center"
                    android:text="我的中奖"
                    android:textColor="@color/caichi_text" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/gift_lin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/app_white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="获奖用户"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="所在房间"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="礼物"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="获得虎币"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="中奖总数"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/diver"/>

            <LinearLayout
                android:id="@+id/my_lin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/app_white"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="礼物"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="虎币奖励"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_white" />
        </LinearLayout>
    </LinearLayout>


    

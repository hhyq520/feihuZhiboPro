<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_headPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/face" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hostname"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/textNormal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="30dp"
            android:id="@+id/iv_level"
            android:layout_height="22dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/tv_name"/>

        <ImageView
            android:id="@+id/iv_vip"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_toRightOf="@+id/iv_level"
            android:layout_alignTop="@+id/iv_level"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_guard"
            android:src="@drawable/icon_guard"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_toRightOf="@+id/iv_vip"
            android:layout_alignTop="@+id/iv_vip"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv_beauti"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_beauti_logo"
            android:layout_toRightOf="@+id/iv_guard"
            android:layout_alignTop="@+id/iv_guard"/>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消场控"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/roommrgs_cancle_shape"
            android:textColor="@color/btn_sure_forbidden"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"/>

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/bg_color">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_shape_50">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_gold_logo" />

                <TextView
                    android:id="@+id/tv_hubi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/img"
                    android:gravity="center"
                    android:textColor="@color/hbNum" />

                <Button
                    android:id="@+id/btn_recharge"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_btn_background_forbidden"
                    android:gravity="center"
                    android:text="@string/charge"
                    android:textColor="@color/app_white"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_idnum"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:canNav="false"
            app:content=""
            app:isBottom="true"
            app:name="@string/id_num" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_level"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="@string/level" />

        <View style="@style/mine_item_view" />

        <RelativeLayout
            android:id="@+id/tcl_news"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ripple_item_white_bg">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="消息"
                android:textColor="@color/textNormal"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sys_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv"
                android:src="@drawable/red_dot"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/ctl_rightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@drawable/icon_arrow_right"
                android:tint="@color/colorGray3" />

        </RelativeLayout>


        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/gonghui"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="公会" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/me_vip"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="VIP会员" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_mall"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="@string/mall" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_hubao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:name="虎宝" />

        <View
            android:id="@+id/view_hubao"
            style="@style/mine_item_view" />


        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_baoguo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="包裹" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color" />

        <RelativeLayout
            android:id="@+id/contribution_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_item_white_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/fans_contribution"
                android:textColor="@color/textNormal"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/contribution_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/con_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/con_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/con_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/gx_pic"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_arrow_right"
                    android:tint="@color/colorGray3" />
            </LinearLayout>

        </RelativeLayout>

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_shouhu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="我的守护" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_changkong"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="我的场控" />

        <View
            android:id="@+id/view_ck"
            style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_earnings"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="@string/earnings" />

        <View
            android:id="@+id/view_earn"
            style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_send_gift"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:canNav="false"
            app:content="0"
            app:isBottom="true"
            app:name="@string/send_gift" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_get_gift"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:canNav="false"
            app:content="0"
            app:isBottom="true"
            app:name="@string/get_gift" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_mydown"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:name="我的下载" />

        <View style="@style/mine_item_view" />

        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="@string/invite_friends" />

        <View style="@style/mine_item_view" />


        <cn.feihutv.zhibofeihu.ui.widget.TCLineControllerView
            android:id="@+id/tcl_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:canNav="true"
            app:isBottom="true"
            app:name="@string/settings" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_white"
              android:orientation="vertical">


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@drawable/img_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/secret_info"
            android:textColor="@color/dynamic_text"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/icon_msg_more"/>

    </FrameLayout>


    <include layout="@layout/net_status_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/diver"/>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_gravity="center"
        android:background="@color/bg_color"
        android:paddingBottom="6.0dip"
        android:paddingTop="6.0dip"
        android:tag="front">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="53.0dip"
            android:layout_height="53.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/fh_kf_icon"/>


        <View
            android:id="@+id/view_dot"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignRight="@+id/icon"
            android:layout_alignTop="@+id/icon"
            android:background="@drawable/notice_dot_shape"/>

        <TextView
            android:id="@+id/fh_name"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_alignTop="@+id/icon"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/icon"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:gravity="left|center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="飞虎客服"
            android:textColor="@color/my_tab_text_n"
            android:textSize="15.0sp"/>

        <LinearLayout
            android:id="@+id/lin_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fh_name"
            android:layout_marginLeft="70.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginTop="2.0dip"
            android:duplicateParentState="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nim_g_ic_failed_small"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fh_msg"
                android:layout_width="fill_parent"
                android:layout_height="25.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:text="欢迎来到飞虎直播，我是虎宝，很高兴为您服务..."
                android:textColor="@color/text_gray"
                android:textSize="13.0sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/back"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/tab_driver_v"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.feihutv.zhibofeihu.ui.widget.swipelistview.SwipeListView
            xmlns:swipe="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recent_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/bangdan_bg"
            android:dividerHeight="1px"
            swipe:swipeActionLeft="reveal"
            swipe:swipeBackView="@+id/back"
            swipe:swipeCloseAllItemsWhenMoveList="true"
            swipe:swipeFrontView="@+id/front"
            swipe:swipeMode="left"
            swipe:swipeOffsetLeft="260dip"
            swipe:swipeOpenOnLongPress="false"/>

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="19dp"
            android:drawableTop="@drawable/icon_no_attention"
            android:text="没人撩，何不主动出击"
            android:textColor="@color/dynamic_text"
            android:textSize="15.0sp"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>

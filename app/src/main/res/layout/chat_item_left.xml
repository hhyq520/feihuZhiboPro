<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="6.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="6.0dip">

    <TextView
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="8.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:text="11:11"
        android:textColor="@color/noticetextcolor"
        android:textSize="12.0sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_below="@id/datetime"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/face"/>

    <LinearLayout
        android:id="@+id/left_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datetime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/icon"
        android:background="@drawable/left_mes_bg"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:clickable="true"
            android:visibility="visible">

            <cn.feihutv.zhibofeihu.ui.widget.MyTextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:autoLink="web|email|phone"
                android:maxWidth="200dp"
                android:textColor="@color/my_tab_text_n"
                android:textSize="15sp"
                android:visibility="visible"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/picture_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/icon"
            android:background="@drawable/left_mes_bg"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datetime"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/relativeLayoutmes"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/BlueProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateDuration="1300"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@android:color/black"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/send_img_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datetime"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/left_msg"
        android:paddingTop="5dp"
        android:src="@drawable/net_warning"
        android:visibility="gone"/>
</RelativeLayout>

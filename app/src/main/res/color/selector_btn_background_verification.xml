<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--用于按钮的点击-->
    <!--选中状态-->
    <item android:state_pressed="true" android:color="@color/appColor"/>
    <!--按钮不可用状态-->
    <item android:state_enabled="false" android:color="@color/text_gray"/>


    <!--按钮未按下状态-->
    <item android:state_pressed="false" android:color="@color/appColor"/>


</selector>
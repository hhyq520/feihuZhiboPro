<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners
                android:radius="10dp">
            </corners>
            <solid
                android:color="@color/app_white">
            </solid>
            <stroke
